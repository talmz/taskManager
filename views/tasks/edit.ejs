<% layout('layouts/boilerplate')%>
    <h1>Edit Task</h1>
    <form action="/tasks/<%=task._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="task[title]" value="<%= task.title %> ">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="task[description]" value="<%= task.description %> ">
        </div>
        <button>Update task</button>
    </form>

    <a href="/tasks/<%=task._id%>"> Back To Task</a>